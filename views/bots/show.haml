#bot
  %h1
    = @bot.name
    .pull-right
      %a.btn.btn-default{:href => "/bots/#{@bot.id}/edit", :title => "edit bot"} edit
      /%form.inline{:action => "/bots/#{@bot.id}/edit", :method => "get"}
      /  %input.btn.btn-default{:type => "submit", :value => "edit"}
      %form.inline{:action => "/bots/#{@bot.id}/delete", :method => "post"}
        %input.btn.btn-danger{:type => "submit", :value => "delete", :onclick => "return confirm('Bot will be deleted. This can not be undone.')"}
  %ul
    %li
      %h3= "author: #{@bot.author}"
    %li
      %textarea#bot_code{"data-readonly" => "nocursor"}= @bot.code
