%h1 arena

#arena_controls
  %select#add_bot.form-control.inline
    %option{:value => ""}= "add bot"
    - @bots.each do |bot|
      %option{:value => bot.id}= bot
  %a#start_game.btn.btn-success{:href => "#", :title => "start game"} start game
  %a#stop_game.btn.btn-danger{:href => "#", :title => "stop game"} stop game

#arena_content
  .table
    .cell#arena_cell
      %canvas#arena
    .cell#bot_list
