%script{:src => "/javascript/arena.js"}
%script{:src => "/javascript/tile.js"}
%script{:src => "/javascript/adjacent_tiles.js"}
%script{:src => "/javascript/bot.js"}
%script{:src => "/javascript/bot_behaviour.js"}
